{
  "manifest_version": 3,
  "name": "Flash Host",
  "version": "1.0.0",
  "description": "Deploy static websites with ease",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": [
    "http://localhost:3000/*",
    "https://YOUR_BACKEND_ORIGIN/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}